<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles/style.css">
</head>
<body>
    <section id="Hero">
        <div class="h-50"></div>
        <div class="container d-flex justify-content-center h-50">
            <div class="text-center">
                <h1 class="pt-3">Daily Blogs</h>
            
                <div class="d-grid gap-5 d-md-flex justify-content-center my-5">
                    <a href="/newpost" class="btn btn-custom btn-lg px-4 me-md-2">New Post</a>
                    <a href="#Posts" class="btn btn-custom btn-lg px-4 me-md-2">View Posts</a>
                </div>
            </div>
        </div>
    </section>


    <section id="Posts">
    <% posts.forEach(post => { %>

            <div class="container col-xxl-8 col-lg-8 col-md-9 col-sm-10 col-11 align-items-center border my-5 rounded-4">
                <h2 class="py-3 fs-1"><%= post.title %></h2>
                <p class="fs-6 text-muted py-2"><%= post.date %></p>
                <div class="flex-column">
                    <p class="fs-5 fw-normal "><%= post.content %></p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4">                    
                        <a class="btn btn-outline-custom rounded-pill" href="/edit/<%= post.id %>">Edit Post</a>
                        <a class="btn btn-outline-secondary rounded-pill" href="/delete/<%= post.id %>">Remove Post</a>
                    </div>
                </div>
                
            </div>
    
    <% }) %>
    </section>
            
    <section id='CreatePost'>
            
            <div class="container col-xxl-8 col-lg-8 col-md-9 col-sm-10 col-11 align-items-center border my-5 rounded-4">
                <h2 class="pt-3 fs-2">Create New Post</h2>
                <form action="/create" method="post" class="px-3 py-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="title" class="form-control" placeholder="Enter Title" required>
                    <label for="content" class="form-label mt-3">Content:</label>
                    <textarea id="content" name="content" class="form-control" rows="5" placeholder="Write your thoughts here." required></textarea>
                    <button type="submit" class="btn btn-outline-custom rounded-pill mt-3">Create Post</button>
                </form>

            </div>
    </section>
     
    <section id="footer">
        <div class="container col-xxl-8 col-lg-8 col-md-9 col-sm-10 col-11">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 mt-4 border-top">
              <div class="col-md-4 d-flex align-items-center">
